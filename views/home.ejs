<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= RESTAURANT.name %></title>
</head>
<body>
    <%- include('./partials/nav') %>

  <h1>Home Page</h1>

  <h3>Restaurant Name: <%= RESTAURANT.name %></h3>
  <h3>Address: <%= RESTAURANT.address %></h3>
  <h3>Phone Number: <%= RESTAURANT.phone %></h3>
<% let isOpen = true %>
<% if(isOpen === true){ %>
    <p>Yes we are open!</p>
    <% }else{ %>
        <h3>Sorry, we are closed.</h3>
        <% } %>
</body>
</html>
